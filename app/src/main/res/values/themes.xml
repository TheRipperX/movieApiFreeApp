<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Filmapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/darkback</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l" tools:ignore="ObsoleteSdkInt">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/darkback</item>
    </style>

<!--    text view splash fragment-->
    <style name="textStyleApp" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">@dimen/_16font_mdp</item>
        <item name="fontFamily">sans-serif</item>

    </style>

    <!--    text view last movies-->
    <style name="textLastMovies" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">@dimen/_14font_mdp</item>
        <item name="fontFamily">sans-serif</item>

    </style>

<!--input text style app-->
    <style name="inputTextLogin" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/gold</item>
        <item name="errorTextColor">@color/khaki</item>
        <item name="counterEnabled">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/teal_700</item>
        <item name="counterTextColor">@color/gold</item>
        <item name="counterMaxLength">25</item>
        <item name="startIconTint">@color/gold</item>
        <item name="boxStrokeColor">@color/gold</item>
        <item name="boxBackgroundColor">@color/darkbackb</item>
    </style>

<!--    textview home fragments-->
    <style name="textHomeFragment" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/gold</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">@dimen/_14font_mdp</item>
        <item name="android:textColorHint">@color/teal_700</item>

    </style>

    <!--    textview detail fragments-->
    <style name="textDetailFragment" parent="Widget.AppCompat.TextView">

        <item name="android:textColor">@color/purple_200</item>
        <item name="android:justificationMode" tools:ignore="NewApi">inter_word</item>
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="android:textColorHint">@color/teal_700</item>

    </style>

<!--    image shape view-->
    <style name="img_detail_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10mdp</item>
    </style>
</resources>